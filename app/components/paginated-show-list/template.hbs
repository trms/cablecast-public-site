<div class="paginated-show-list" ...attributes>
  <div class="search-page">
    <div class="row">
      <div class="col-xs-12">
        <h1 class="search-results-header">
          {{@title}}
          <br>
          {{#if this.showPaginationControl}}
            <small>
              Displaying
              {{this.firstResult}}
              -
              {{this.lastResult}}
              of
              {{@meta.count}}
              shows.
            </small>
          {{else}}
            <small>
              Displaying
              {{@shows.length}}
              shows.
            </small>
          {{/if}}
        </h1>
      </div>
    </div>
    <div class="show-player clearfix">
      <div class="col-lg-12 u-no-padding">
        {{#if this.showPaginationControl}}
          <PaginationControl
            @onPageSelect={{action "goToPage"}}
            @pageSize={{@pageSize}}
            @currentPage={{@page}}
            @count={{@total}}
            class="text-center"
          />
        {{/if}}
        <div class="show-stub-container">
          {{#if @loading}}
            <LoadingSpinner />
          {{else}}
            {{#each @shows as |result|}}
              <ShowStub @show={{result}} />
            {{else}}
              <h3>
                Your search returned no results.
              </h3>
            {{/each}}
          {{/if}}
        </div>
        {{#if this.showPaginationControl}}
          <PaginationControl
            @onPageSelect={{action "goToPage"}}
            @pageSize={{@pageSize}}
            @currentPage={{@page}}
            @count={{@total}}
            class="text-center"
          />
        {{/if}}
      </div>
    </div>
  </div>
</div>