<div ...attributes>
  {{!-- template-lint-disable no-html-comments --}}
  <!-- Described channel.channelContactInfo !-->
  {{#if this.config.contactPhone}}
    <p>
      <strong>
        Call Us:
      </strong>
      <a href="tel:{{@config.contactPhone}}">
        {{@config.contactPhone}}
      </a>
    </p>
  {{/if}}
  {{#if @config.contactEmail}}
    <p>
      <strong>
        Email Us:
      </strong>
      <a href="mailto:{{@config.contactEmail}}">
        {{@config.contactEmail}}
      </a>
    </p>
  {{/if}}
  <h3>
    Connect With Us
  </h3>
  {{#if @config.twitterUrl}}
    <a
      class="social-link"
      href="http://www.twitter.com/{{@config.twitterUrl}}"
      alt="Open Twitter in a new window"
      target="_blank" rel="noopener noreferrer"
    >
      <img src="{{this.rootURL}}images/twitter.png" alt="Twitter Icon">
    </a>
  {{/if}}
  {{#if @config.facebookUrl}}
    <a
      class="social-link"
      href="http://www.facebook.com/{{@config.facebookUrl}}"
      alt="Open Facebook in a new window"
      target="=_blank"
      rel="noopener"
    >
      <img src="{{this.rootURL}}images/facebook.png" alt="Facebook Icon">
    </a>
  {{/if}}
  {{#if @config.blogUrl}}
    <a
      class="social-link"
      href={{@config.blogUrl}}
      alt="Open our blog in a new window"
      target="_blank" rel="noopener noreferrer"
    >
      <img src="{{this.rootURL}}images/website.png" alt="Website Image">
    </a>
  {{/if}}
  {{#if @hasPodcasts}}
    <LinkTo @route="podcasts" class="social-link">
      <img src="{{this.rootURL}}images/podcast.png" alt="Podcast Icon">
    </LinkTo>
  {{/if}}
</div>