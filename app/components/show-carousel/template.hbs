<div id="carousel" class="carousel slide" data-ride="carousel" data-interval="false">
	<!-- Indicators -->
	<ol class="carousel-indicators">
		{{#each item in shows}}
		    <li data-target="#carousel" {{bind-attr data-slide-to=item.id}} {{bind-attr class=(is-id-equal '' 'active' firstId item.id)}}></li>
	    {{/each}}
	</ol>

	<!-- Wrapper for slides -->
	<div class="carousel-inner" role="listbox">

	    {{#each item in shows}}
	    	<div {{bind-attr class=(is-id-equal 'item' 'active' firstId item.id)}}>
	    	
				{{#link-to 'show' item.id}}
				<div class="embed-responsive embed-responsive-16by9">
					{{show-thumbnail show=item quality='Large' class="embed-responsive-item"}}
				</div>
				{{/link-to}}
				
				<div class="carousel-caption">
					<h3>{{item.cgTitle}}</h3>
				</div>
			</div>
	    {{/each}}

	</div>

	<!-- Controls -->
	<a class="left carousel-control" {{action 'previousSlide'}} href="#carousel" role="button" data-slide="prev">
		<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
		<span class="sr-only">Previous</span>
	</a>
	<a class="right carousel-control" {{action 'nextSlide'}}  href="#carousel" role="button" data-slide="next">
		<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
		<span class="sr-only">Next</span>
	</a>
</div>