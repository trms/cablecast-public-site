<div class="shows-gallery" ...attributes>
  <div class="gallery-title-wrapper">
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        {{!-- template-lint-disable no-invalid-interactive --}}
        <h1 class="gallery-title-header" {{action "collapseGallery"}}>
          {{@gallery.displayName}}
          {{#if this.collapsed}}
            {{fa-icon "chevron-up"}}
          {{else}}
            {{fa-icon "chevron-down"}}
          {{/if}}
        </h1>
      </div>
      <div class="col-sm-2">
        {{#if @gallery.id}}
          <LinkTo @route="gallery" @model={{@gallery.id}} class="gallery-show-all-link">
            Show All...
          </LinkTo>
        {{/if}}
      </div>
    </div>
  </div>
  <div class="gallery-wrapper">
    {{#unless this.collapsed}}
      <div class="show-stub-container">
        {{#if this.showsTask.isRunning}}
          <LoadingSpinner />
        {{else}}
          {{#each this.filteredShows as |show|}}
            <ShowStub @show={{show}} />
          {{else}}
            <h2 class="gallery-no-shows-warning">
              No Shows Available
            </h2>
          {{/each}}
        {{/if}}
      </div>
    {{/unless}}
  </div>
</div>