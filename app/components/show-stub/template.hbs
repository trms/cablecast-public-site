{{#if show.showThumbnails}}
  {{#link-to 'show' show.id class="thumbnail-responsive"}}
    {{show-thumbnail show=show quality='Large' class="img-responsive"}}
  {{/link-to}}
{{else}}
	<div class="thumbnail-responsive">
    <img src="{{rootURL}}/images/placeholder.jpg" alt="" class="img-responsive">
  </div>
{{/if}}
<h3 class="show-stub-title-header u-break-text">
	{{link-to show.cgTitle 'show' show.id class="show-stub-title-link"}}
</h3>

<div class="show-stub-property">
  <span class="show-stub-property-title">
	Date:
  </span>

	<span class="show-stub-property-value">
		{{show.eventDateString}}
	</span>

</div>

<div class="show-stub-property">
  <div class="show-stub-property-title">
    Length:
  </div>

	<span class="show-stub-property-value">
		{{#each show.reels as |reel|}}
			{{reel.trt}}
		{{/each}}
	</span>

</div>
{{#if show.producer.name}}
	<div class="show-stub-property">
    <div class="show-stub-property-title">
      Producer:
    </div>

		<span class="show-stub-property-value">
			{{show.producer.name}}
		</span>
	</div>
{{/if}}

{{#if show.project.name}}
	<div class="show-stub-property">
    <div class="show-stub-property-title">
      Project:
    </div>

		<span class="show-stub-property-value">
			{{show.project.name}}
		</span>
	</div>
{{/if}}

{{#if show.category.name}}
	<div class="show-stub-property">
    <div class="show-stub-property-title">
      Category:
    </div>

		<span class="show-stub-property-value">
			{{show.category.name}}
		</span>
	</div>
{{/if}}
